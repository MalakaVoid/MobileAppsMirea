<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp"
        >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:background="@color/black"
            android:text="REDUX"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:textFontWeight="900"
            android:paddingVertical="10dp"
            />

        <ImageView
            android:id="@+id/reduxLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="-120dp"
            android:layout_marginHorizontal="80dp"
            android:src="@drawable/redux" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Redux — это инструмент для управления состоянием данных и пользовательским интерфейсом в приложениях JavaScript с большим количеством сущностей. Представляет собой библиотеку JavaScript."
            android:layout_below="@id/reduxLogo"
            android:textSize="20sp"
            android:layout_marginTop="-260px"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:padding="10dp"
            />
        <ImageView
            android:id="@+id/checkLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/description"
            android:layout_centerHorizontal="true"
            android:src="@drawable/check_mark" />
        <TextView
            android:id="@+id/predictableTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkLogo"
            android:layout_centerHorizontal="true"
            android:text="Предсказуемый"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:textFontWeight="500"
            />
        <TextView
            android:id="@+id/predictableDesc"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/predictableTitle"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:text="Redux помогает вам писать приложения, которые ведут себя последовательно, работают в различных средах (клиент, сервер и нативные) и легко тестируются."
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:id="@+id/Logo2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/predictableDesc"
            android:layout_centerHorizontal="true"
            android:src="@drawable/cubes" />
        <TextView
            android:id="@+id/predictableTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Logo2"
            android:layout_centerHorizontal="true"
            android:text="Централизованная"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:textFontWeight="500"
            />
        <TextView
            android:id="@+id/predictableDesc2"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/predictableTitle2"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:text="Централизация состояния и логики вашего приложения позволяет использовать мощные возможности, такие как отмена/возврат, сохранение состояния и многое другое."
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:id="@+id/Logo3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/predictableDesc2"
            android:layout_centerHorizontal="true"
            android:src="@drawable/debug" />
        <TextView
            android:id="@+id/predictableTitle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Logo3"
            android:layout_centerHorizontal="true"
            android:text="Отлаживаемый"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:textFontWeight="500"
            />
        <TextView
            android:id="@+id/predictableDesc3"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/predictableTitle3"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:text="Инструменты разработки Redux упрощают отслеживание времени, места, причины и способа изменения состояния вашего приложения. Архитектура Redux позволяет регистрировать изменения, использовать отладку с перемещением во времени и даже отправлять полные отчеты об ошибках на сервер."
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            />


    </RelativeLayout>
</androidx.core.widget.NestedScrollView>